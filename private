        }

        .operation-item {
            margin-bottom: 15px;
            padding: 10px;
            background-color: #2c3e5e;
            border-radius: 6px;
        }

        .operation-item label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .operation-item input {
            width: calc(100% - 20px);
            margin: 5px 0;
        }

        /* Novo estilo para as abas adicionais */
        .tab-button {
            background-color: #f5b041;
            color: #0a1f44;
