        </div>

        <!-- Seção de entrar (Login) -->
        <div id="loginSection" class="hidden">
            <h2>Entrar</h2>
            <input type="text" id="loginCpf" placeholder="CPF" required>
            <input type="password" id="loginPassword" placeholder="Senha" required>
            <button id="loginUser">Entrar</button>
            <button id="forgotPassword">Esqueci a Senha</button>
            <button id="backToWelcomeFromLogin">Voltar</button>
        </div>

        <!-- Seção do banco -->
        <div id="bankSection" class="hidden">
            <h2>Bem-vindo(a), <span id="userName"></span>!</h2>
            <p>Agência: <span id="userAgencia"></span></p>
            <p>Conta: <span id="userConta"></span></p>
            <p>Saldo: R$ <span id="userSaldo"></span></p>

            <!-- Barra de progresso para saldo -->
            <div id="balanceBar">
                <div id="progress"></div>
            </div>

            <!-- Operações bancárias -->
            <button id="depositButton">Depositar</button>
            <button id="pixButton">PIX</button>
            <button id="transferButton">Transferência</button>
            <button id="investmentButton">Investimentos</button>
            <button id="payBillButton">Pagar Boleto</button>
            <button id="viewExtratoButton">Ver Extrato</button>
            <button id="profileButton">Perfil</button>
            <button id="logoutButton">Sair</button>

            <!-- Notificação de operação -->
            <div class="notification" id="notification">Operação realizada com sucesso!</div>

            <!-- Abas adicionais -->
            <div class="tab-button" id="chatTab">Falar com Chat</div>
            <div class="tab-button" id="helpTab">Ajuda</div>
        </div>

        <!-- Seção de extrato -->
        <div id="extratoSection" class="hidden">
