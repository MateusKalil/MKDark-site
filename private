            <button id="backToBankFromProfile">Voltar ao Banco</button>
        </div>

        <!-- Seção de investimentos -->
        <div id="investmentSection" class="hidden">
            <h2>Investimentos</h2>
            <p>Saldo atual: R$ <span id="totalInvestidoDisplay">0.00</span></p>
